<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="24dp"
    tools:context=".ui.profil.AboutActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_h_buddy"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/h_buddy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_app_name"
            style="@style/TextAppearance.Material3.DisplayMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_title"
            android:textColor="@color/md_theme_primary"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv_h_buddy"
            app:layout_constraintStart_toStartOf="@+id/iv_h_buddy"
            app:layout_constraintTop_toBottomOf="@+id/iv_h_buddy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_theme_surfaceContainer"
            android:layout_marginTop="24dp"
            android:padding="24dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv_app_name">

            <TextView
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tentang Aplikasi"
                android:textColor="@color/md_theme_onSurface" />

            <TextView
                style="@style/TextAppearance.Material3.BodyMedium.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Blandit volutpat maecenas volutpat blandit aliquam etiam erat. Nisl rhoncus mattis rhoncus urna neque viverra."
                android:textColor="@color/md_theme_onSurface" />

            <TextView
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Tim Pengembang"
                android:textColor="@color/md_theme_onSurface" />

            <TextView
                style="@style/TextAppearance.Material3.BodyMedium.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Blandit volutpat maecenas volutpat blandit aliquam etiam erat. Nisl rhoncus mattis rhoncus urna neque viverra."
                android:textColor="@color/md_theme_onSurface" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>