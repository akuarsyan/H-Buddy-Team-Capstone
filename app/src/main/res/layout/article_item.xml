<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.Material3.CardView.Filled"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="24dp"
    android:backgroundTint="@color/md_theme_surfaceContainer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="140dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toBottomOf="@+id/button_favorite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_article_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/article_cd_image"
                android:scaleType="centerCrop"
                tools:src="@drawable/temulawak" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_article_title"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/md_theme_onSurface"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/materialCardView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Judul Artikel, Judul Artikel, Judul Artikel, Judul Artikel, Judul Artikel" />

        <TextView
            android:id="@+id/tv_article_body"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/md_theme_outline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_article_title"
            app:layout_constraintTop_toBottomOf="@id/tv_article_title"
            tools:text="Lorem ipsum dolor do eiusmod tempor incididunt ut labore et dolore asdad  tempor incididunt ut labore e" />

        <TextView
            android:id="@+id/tv_article_label"
            style="@style/TextAppearance.Material3.LabelSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:clickable="false"
            android:textColor="@color/md_theme_tertiary"
            app:layout_constraintEnd_toStartOf="@+id/button_favorite"
            app:layout_constraintStart_toStartOf="@+id/tv_article_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_article_body"
            tools:text="Bunga telang" />


            <CheckBox
                android:id="@+id/button_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/bookmark_icon_selector"
                android:checked="false"
                app:buttonTint="@color/md_theme_primary"
                app:layout_constraintBottom_toBottomOf="@+id/tv_article_label"
                app:layout_constraintEnd_toEndOf="@+id/tv_article_body"
                app:layout_constraintTop_toTopOf="@+id/tv_article_label"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>